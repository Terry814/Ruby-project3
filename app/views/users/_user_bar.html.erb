<% if logged_in? -%>
  <div id="user-bar-greeting">Logged in as <%= link_to_current_user :content_method => :login %> </div>
  <div id="user-bar-action"  ><%= link_to "Log out", {:host => 'www.englandkit.info/reminders', :controller => 'sessions', :action => 'mydestroy',  :title => "Log out" }    %></div>
<% else -%>
  <div id="user-bar-greeting"><%= link_to_login_with_IP 'Not logged in', :style => 'border: none;' %></div>
  <div id="user-bar-action"  ><%= link_to "Log in",  {:host => 'www.englandkit.info/reminders', :controller => 'sessions', :action => 'new',   :title => "Log in" } %> /
                              <%= link_to "Sign up", {:host => 'www.englandkit.info/reminders', :controller => 'users', :action => 'new',  :title => "Create an account" } %></div>
<% end -%>